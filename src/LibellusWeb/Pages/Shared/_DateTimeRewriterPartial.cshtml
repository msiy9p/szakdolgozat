<script type="text/javascript">
    function rewritedatetime() {
        var spans = document.getElementsByClassName("datetimerewrite");

        for (i = 0; i < spans.length; i++) {
            var localDate = new Date(spans[i].innerHTML);
            spans[i].innerHTML = localDate.toLocaleString([], { year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        }
    }
    window.onload = rewritedatetime;
</script>